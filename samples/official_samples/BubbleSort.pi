@pre  true
@post sorted(rv, 0, |a| - 1)
int[] BubbleSort(int[] a) {
  int i;
  int j;
  int t;
  for
    @ true
    (i := |a| - 1; i > 0; i := i - 1)
  {
    for
      @ true
      (j := 0; j < i; j := j + 1)
    {
      if (a[j] > a[j + 1]) {
        t := a[j];
        a[j] := a[j + 1];
        a[j + 1] := t;
      }
    }
  }
  return a;
}
